<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="160dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <!-- Icon khóa -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_key" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter a Password"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the new password"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>



    <!-- Ô nhập mật khẩu mới -->
    <EditText
        android:id="@+id/getpassword_newpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="New Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>


    <!-- Ô xác nhận  mật khẩu -->
    <EditText
        android:id="@+id/getpassword_confirmpassword"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Confirm Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <!-- Nút Create Account-->
    <Button
        android:id="@+id/getpassword_btn_continue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginBottom="16dp"/>

</LinearLayout>
