<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="100dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <!-- Icon khóa -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_people" />

    <!-- Tiêu đề -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an Account"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"/>

    <!-- Ô nhập Username -->
    <EditText
        android:id="@+id/register_username"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Username"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"/>
    <!-- Ô nhập Email -->
    <EditText
        android:id="@+id/register_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"/>


    <!-- Ô nhập mật khẩu -->
    <EditText
        android:id="@+id/register_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <!-- Ô nhập Phone -->
    <EditText
        android:id="@+id/register_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:id="@+id/register_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <CheckBox
            android:id="@+id/cb_agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/white"/>

        <TextView
            android:id="@+id/tv_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I hereby agree to the terms of services and privacy policy"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:paddingStart="8dp"/>
    </LinearLayout>



    <!-- Nút Create Account-->
    <Button
        android:id="@+id/register_btn_createaccount"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Create Account"
        android:textAllCaps="false"
        android:textSize="18dp"
        android:textColor="@color/white"
        android:background="@drawable/button"
        android:layout_marginBottom="16dp"/>

    <!-- ss -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already have an account? "
            android:textColor="@color/white"
            android:textSize="14dp"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/register_signin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

    </LinearLayout>



</LinearLayout>
