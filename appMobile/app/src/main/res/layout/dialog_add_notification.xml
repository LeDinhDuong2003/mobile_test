<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/background_dark">

    <!-- Tiêu đề dialog -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tạo thông báo mới"
        android:textColor="@color/button_purple"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Phần Tiêu đề thông báo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tiêu đề thông báo"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNotificationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tiêu đề thông báo"
        android:textColorHint="#8E8E9B"
        android:textColor="@color/white"
        android:inputType="text"
        android:maxLines="1"
        android:layout_marginBottom="20dp"
        android:padding="14dp"
        android:background="@drawable/badge_background" />

    <!-- Phần Nội dung thông báo -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nội dung thông báo"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNotificationMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập nội dung thông báo chi tiết"
        android:textColorHint="#8E8E9B"
        android:textColor="@color/white"
        android:inputType="textMultiLine"
        android:minLines="3"
        android:maxLines="5"
        android:gravity="top|start"
        android:layout_marginBottom="20dp"
        android:padding="14dp"
        android:background="@drawable/badge_background" />

    <!-- Phần URL hình ảnh -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="URL Hình ảnh (Tùy chọn)"
        android:textColor="@color/text_light"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNotificationImageUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="https://example.com/image.jpg"
        android:textColorHint="#8E8E9B"
        android:textColor="@color/white"
        android:inputType="textUri"
        android:maxLines="1"
        android:padding="14dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/badge_background" />

    <!-- Phần nút tác vụ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hủy"
            android:textColor="@color/white"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gửi thông báo"
            android:textColor="@color/white"
            android:backgroundTint="@color/button_purple"
            android:paddingHorizontal="16dp" />
    </LinearLayout>

</LinearLayout>