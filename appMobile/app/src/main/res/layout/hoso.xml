<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/maunen"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:paddingTop="70dp"
    android:paddingLeft="32dp"
    android:paddingRight="32dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <!-- Ảnh đại diện -->
        <ImageView
            android:id="@+id/profile_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/img"/>

        <!-- Icon máy ảnh -->
        <ImageView
            android:id="@+id/profile_btnchangeavatar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/profile_avatar"
            android:layout_alignEnd="@id/profile_avatar"
            android:scaleType="centerInside"
            android:src="@drawable/ic_camera"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"/>
    </RelativeLayout>


    <TextView
        android:id="@+id/profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Text "Information" -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Information"
            android:textColor="@android:color/white"
            android:textSize="20dp"/>
        <!-- Icon bút -->
        <ImageView
            android:id="@+id/profile_btnedit"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_edit"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- Ô Email -->
    <EditText
        android:id="@+id/profile_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:text="btlcovananh@gmail.com"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"/>


    <!-- Ô mật khẩu -->
    <EditText
        android:id="@+id/profile_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:text="................."
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:drawableStart="@drawable/ic_eye"
        android:paddingStart="16dp"
        android:drawablePadding="5dp"
        android:paddingEnd="48dp"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"/>

    <!-- Ô Phone -->
    <EditText
        android:id="@+id/profile_phone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:focusable="false"
        android:text="0864365278"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="@drawable/edittext"
        android:paddingStart="16dp"
        android:drawableStart="@drawable/ic_phone"
        android:drawablePadding="10dp"
        android:layout_marginBottom="16dp"/>


</LinearLayout>
